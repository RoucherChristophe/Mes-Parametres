            android:text="Parametres Wifi" />

        <CheckBox
            android:id="@+id/chbAvion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mode Avion" />

        <CheckBox
            android:id="@+id/chbModeEco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mode  Economique" />

        <CheckBox
            android:id="@+id/chbAppareilConnecte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
